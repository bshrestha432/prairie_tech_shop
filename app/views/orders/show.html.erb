<h1>Order Confirmation</h1>

<p>Thank you for your order, <%= @order.user.username %>!</p>
<p>Your order number is: <%= @order.id %></p>
<p>Total Price: <%= number_to_currency(@order.total_price) %></p>
<p>Tax: <%= number_to_currency(@order.tax) %></p>
<p>Status: <%= @order.payment_status.capitalize %></p>

<h3>Order Items</h3>
<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @order.order_items.each do |item| %>
      <tr>
        <td><%= item.product.name %></td>
        <td><%= item.quantity %></td>
        <td><%= number_to_currency(item.price) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to 'Back to Shopping', root_path %></p>
