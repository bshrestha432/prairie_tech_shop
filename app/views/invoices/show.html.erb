<h1>Invoice #<%= @invoice.id %></h1>

<p><strong>Amount Paid:</strong> <%= number_to_currency(@invoice.total_amount) %></p>
<p><strong>Status:</strong> <%= @invoice.status.capitalize %></p>

<h3>Order Items</h3>
<ul>
  <% @invoice.order.order_items.each do |item| %>
    <li>
      <%= item.product.name %> —
      <%= item.quantity %> × <%= number_to_currency(item.price) %>
    </li>
  <% end %>
</ul>

<%= link_to "Back to Home", root_path, class: "btn btn-secondary mt-3" %>
